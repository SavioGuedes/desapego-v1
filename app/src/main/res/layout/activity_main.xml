<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/branco"
    tools:context="com.example.savio.desapego.MainActivity">

    <LinearLayout
        android:id="@+id/main_menu"
        android:weightSum="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/menu_pesquisa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".4"
            android:layout_gravity="center"
            android:tint="@color/cinza"
            android:src="@drawable/ic_busca" />

        <ImageView
            android:id="@+id/menu_principal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".2"
            android:layout_gravity="center"
            android:src="@mipmap/img_app"/>

        <ImageView
            android:id="@+id/menu_perfil"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_weight=".4"
            android:layout_gravity="center"
            android:tint="@color/cinza"
            android:src="@drawable/ic_perfil"/>

    </LinearLayout>

    <View
        android:id="@+id/main_linha"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/main_menu"
        android:background="@color/cinza"
        android:alpha="0.3"/>

    <FrameLayout
        android:id="@+id/inflar"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/main_linha">

    </FrameLayout>

</RelativeLayout>
